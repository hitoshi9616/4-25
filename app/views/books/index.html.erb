<div class="container px-5 px-sm-0">

  <div id="error_explanation">
    <% if @book.errors.any? %>
      <h3>
        <%= @book.errors.count %>prohibited this obj from being saved:
      </h3>
      <ul>
        <%= @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="row">
    <%= render 'books', book: @book, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
        <% @books.each do |book| %>
          <tr>
            <th>
              <%= link_to image_tag book.user.get_profile_image(100,100) %>
            </th>
            <th><%= book.title %></th>
            <th><%= book.opinion %></th>
            <th></th>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>