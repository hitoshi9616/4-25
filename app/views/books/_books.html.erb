<div class="col-md3">
  <h2>User info</h2>

  <%= image_tag user.get_profile_image(100,100) %>

  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <div class="row">
    <%= link_to do %>
      <i class="fas fa-user-cog"></i>
      <% if user == current_user %>
        <% link_to edit_user_path(current_user.id) %>
      <% else %>
        <% link_to user_path(current_user.id) %>
      <% end %>
    <% end %>
  </div>

  <h2 class="mt-3">New book</h2>
    <div>
      <%= form_with model: Book.new do |f| %>

      <div class="form-group">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <%= f.label :opinion %><br>
        <%= f.text_area :opinion %>
      </div>
      <div class="form-group">
        <%= f.submit "Create Book", class:"btn btn-success" %>
      </div>
      <% end %>
    </div>
</div>