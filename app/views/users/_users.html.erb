<h2>User info</h2>

<table>
  <tbody>
    <% user.each do |user| %>

    <% image_tag user.get_profile_image(100,100) %>

    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= current_user.introduction %></th>
    </tr>
  <% end %>
  </tbody>

  <div>
    <!-- if使ってcurrent_userでリンク先変える-->
    <%= link_to , edit_user_path(current_user.id) %>
  </div>

  <h2>New book</h2>
  <%= form_with model: book do |f| %>

    <label>Titel</label>
    <%= f.text_filed :titel %>

    <label>Opinion</label>
    <%= f.text_area :opinion %>

    <%= f.submit "Create Book" %>
  <% end %>
</table>