<!--ユーザー詳細-->
<div>
  <h2>Books</h2>

  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th></th>
      </tr>
    </thead>

    <% @books.each do |book| %>
    <tbody>
      <tr>
        <th>
        <th><%= image_tag book.user.get_profile_image(100,100) %></th>
        <th><%= link_to 'book.titel', book_path(book.id) %></th>
        <th><%= book.opinion %></th>
        <th></th>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>